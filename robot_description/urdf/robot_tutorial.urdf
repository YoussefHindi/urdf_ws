<?xml version="1.0"?>

<!--  Define materials -->   

<robot name="robot_tutorial">

<material name="blue">
     <color rgba="0 0 0.8 1"/>
   </material>
   
   <material name="red">
     <color rgba="0.8 0 0 1"/>
   </material>
   
   <material name="yellow">
     <color rgba="1 1 0 0.3"/>
   </material>
  
   <material name="green">
     <color rgba="0 0.8 0 1"/>
   </material>
   
   
    <gazebo reference="chassis">
    <material>Gazebo/Red</material>
  </gazebo>
   
  <gazebo reference="front_wheel_right">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="front_wheel_left">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="back_wheel_left">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="back_wheel_right">
    <material>Gazebo/Blue</material>
  </gazebo>
 <gazebo reference="camera_link">
    <material>Gazebo/Green</material>
  </gazebo>


<link name="base_footprint">
    </link>
  
  <joint name="chassis_joint" type="fixed">
     <parent link="base_footprint"/>
     <child link="chassis"/>
   </joint>
   
 
 <link name="chassis">
     <visual>
       <geometry>
         <box size="0.4 0.4 0.1"/>
       </geometry>
      <material name="red"/>
     </visual>
     
     <collision name='collision'>
      <geometry>
        <box size="0.4 0.4 0.1"/>
      </geometry>
    </collision>
     
     <inertial>
        <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0"/>
        <mass value="1.0"/>
        <inertia ixx="0.4" ixy="0.0" ixz="0.0"
                 iyy="0.4" iyz="0.0"
                 izz="0.2"/>
    </inertial>    
   </link>
    
   <!--right front wheel joint-->
   <joint name="front_wheel_right_joint" type="continuous">
     <parent link="chassis"/>
     <child link="front_wheel_right"/>
     <origin xyz="0.2 -0.22 0" rpy="1.5707 0 0"/>
     <axis xyz="0 0 -1"/>
   </joint>

   <!--right front wheel-->
   <link name="front_wheel_right">
     <visual>
       <geometry>
         <cylinder length="0.04" radius="0.07"/>
       </geometry>
       <material name="blue"/>
     </visual>
     
     <collision name="collision">
      <geometry>
        <cylinder radius="0.07" length="0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
   </link>
   
   
    <joint name="front_wheel_left_joint" type="continuous">
     <parent link="chassis"/>
     <child link="front_wheel_left"/>
     <origin xyz="0.2 0.22 0" rpy="1.5707 0 0"/>
     <axis xyz="0 0 -1"/>
   </joint>
   
   <!--left front wheel-->
   <link name="front_wheel_left">
     <visual>
       <geometry>
         <cylinder length="0.04" radius="0.07"/>
       </geometry>
       <material name="blue"/>
     </visual>
     
     <collision name="collision">
      <geometry>
        <cylinder radius="0.07" length="0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
   </link>

  <joint name="back_wheel_left_joint" type="continuous">
     <parent link="chassis"/>
     <child link="back_wheel_left"/>
     <origin xyz="-0.2 -0.22 0" rpy="1.5707 0 0"/>
     <axis xyz="0 0 -1"/>
   </joint>
   
   <!--left back wheel-->
   <link name="back_wheel_left">
     <visual>
       <geometry>
         <cylinder length="0.04" radius="0.07"/>
       </geometry>
       <material name="blue"/>
     </visual>
     
     <collision name="collision">
      <geometry>
        <cylinder radius="0.07" length="0.04"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
   </link>
   
   <joint name="back_wheel_right_joint" type="continuous">
     <parent link="chassis"/>
     <child link="back_wheel_right"/>
     <origin xyz="-0.2 0.22 0" rpy="1.5707 0 0"/>
     <axis xyz="0 0 -1"/>
   </joint>   
   
   <!--right back wheel-->
   <link name="back_wheel_right">
     <visual>
       <geometry>
         <cylinder length="0.04" radius="0.07"/>
       </geometry>
       <material name="blue"/>
     </visual>
     
     <collision name="collision">
      <geometry>
        <cylinder radius="0.07" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
   </link>
   
   <gazebo>
  <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">

    <!-- Plugin update rate in Hz -->
    <updateRate>10</updateRate>

    <!-- Name of left joint, defaults to `left_joint` -->
    <leftJoint>back_wheel_left_joint</leftJoint>

    <!-- Name of right joint, defaults to `right_joint` -->
    <rightJoint>back_wheel_right_joint</rightJoint>

    <!-- The distance from the center of one wheel to the other, in meters, defaults to 0.34 m -->
    <wheelSeparation>0.4</wheelSeparation>

    <!-- Diameter of the wheels, in meters, defaults to 0.15 m -->
    <wheelDiameter>0.7</wheelDiameter>

    <!-- Wheel acceleration, in rad/s^2, defaults to 0.0 rad/s^2 -->
    <wheelAcceleration>1.0</wheelAcceleration>

    <!-- Maximum torque which the wheels can produce, in Nm, defaults to 5 Nm -->
    <wheelTorque>20</wheelTorque>

    <!-- Topic to receive geometry_msgs/Twist message commands, defaults to `cmd_vel` -->
    <commandTopic>cmd_vel</commandTopic>

    <!-- Topic to publish nav_msgs/Odometry messages, defaults to `odom` -->
    <odometryTopic>odom</odometryTopic>

    <!-- Odometry frame, defaults to `odom` -->
    <odometryFrame>odom</odometryFrame>

    <!-- Robot frame to calculate odometry from, defaults to `base_footprint` -->
    <robotBaseFrame>base_footprint</robotBaseFrame>

    <!-- Odometry source, 0 for ENCODER, 1 for WORLD, defaults to WORLD -->
    <odometrySource>0</odometrySource>

    <!-- Set to true to publish transforms for the wheel links, defaults to false -->
    <publishWheelTF>true</publishWheelTF>

    <!-- Set to true to publish transforms for the odometry, defaults to true -->
    <publishOdom>true</publishOdom>
    
    <publishOdomTF>true</publishOdomTF>
    
     <publishTf>true</publishTf>
     
     <rosDebugLevel>na</rosDebugLevel>

    <!-- Set to true to publish sensor_msgs/JointState on /joint_states for the wheel joints, defaults to false -->
    <publishWheelJointState>true</publishWheelJointState>

    <!-- Set to true to swap right and left wheels, defaults to true -->
    <legacyMode>false</legacyMode>
  </plugin>
</gazebo>

 <joint name="hokuyo_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="hokuyo_link"/>
  </joint>

  <!-- Hokuyo Laser -->
  <link name="hokuyo_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    	<box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robot_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
   
   <!-- hokuyo -->
  <gazebo reference="hokuyo_link">
    <sensor type="gpu_ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for Hokuyo laser
               achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
               stddev of 0.01m will put 99.7% of samples within 0.03m of the true
               reading. -->
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_gpu_laser.so">
        <topicName>robot_tutorial/laser/scan</topicName>
        <frameName>hokuyo_link</frameName>
      </plugin>
    </sensor>
  </gazebo>
   
    
    
    
</robot>

